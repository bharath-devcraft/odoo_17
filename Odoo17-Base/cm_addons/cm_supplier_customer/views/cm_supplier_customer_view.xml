    <!-- Supplier Tree view end -->
    
    
    
    
    <!-- explicit search view definition -->
    <record id="cm_supplier_customer_search" model="ir.ui.view">
        <field name="name">Supplier Customer Search</field>
        <field name="model">cm.supplier.customer</field>
        <field name="arch" type="xml">
            <search string="Search Master">
                <field name="name" string="Name" filter_domain="[('name','ilike',self)]"/>
                <field name="short_name" string="Short Name" filter_domain="[('short_name','ilike',self)]"/>

                <filter name="my_master" string="My Master" domain="[('user_id', '=', uid)]"/>
                <filter name="Draft" domain="[('status', '=', 'draft')]"/>
                <filter name="Editable" domain="[('status', '=', 'editable')]"/>
                <filter name="Active" domain="[('status', '=', 'active')]"/>
                <filter name="Inactive" domain="[('status', '=', 'inactive')]"/>
                <filter name="My Draft" string="My Draft" domain="[('user_id', '=', uid),('status', '=', 'draft')]"/>
                <filter name="My Editable" string="My Editable" domain="[('user_id', '=', uid),('status', '=', 'editable')]"/>
                <filter name="My Active" string="My Active" domain="[('user_id', '=', uid),('status', '=', 'active')]"/>
                <filter name="My Inactive" string="My Inactive" domain="[('user_id', '=', uid),('status', '=', 'inactive')]"/>
                <filter name="Inactive List" domain="[('active', '=', False)]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Short Name" name="short_name" domain="[]" context="{'group_by': 'short_name'}"/>
                    <filter string="Status" name="status" domain="[]" context="{'group_by': 'status'}"/>
                    <filter string="Approved By" name="status" domain="[]" context="{'group_by': 'ap_rej_user_id'}"/>
                    <filter string="Approved Date" name="status" domain="[]" context="{'group_by': 'ap_rej_date'}"/>
                </group>
            </search>
        </field>
    </record>
    <!-- search view end -->

    <!-- actions opening views on models -->

    <record id="cm_customer_win_action" model="ir.actions.act_window">
        <field name="name">Customer</field>
        <field name="res_model">cm.supplier.customer</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="view_id" ref="cm_customer_tree_js"/>
        <field name="search_view_id" ref="cm_supplier_customer_search"/>
		<field name="context">{'default_entry_type': 'customer'}</field>
		<field name="domain">[('entry_type','=','customer')]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">No master record found. Let's create one!</p>
        </field>
    </record>
    
    <record id="cm_supplier_win_action" model="ir.actions.act_window">
        <field name="name">Supplier</field>
        <field name="res_model">cm.supplier.customer</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="view_id" ref="cm_supplier_tree_js"/>
        <field name="search_view_id" ref="cm_supplier_customer_search"/>
		<field name="context">{'default_entry_type': 'supplier'}</field>
		<field name="domain">[('entry_type','=','supplier')]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">No master record found. Let's create one!</p>
        </field>
    </record>
    <!-- actions end -->

    <!-- actions menus -->

    <menuitem name="Customer" id="cm_customer_act_menu" parent="cm_master.cm_master_m_parent" action="cm_customer_win_action"/>
    <menuitem name="Supplier" id="cm_supplier_act_menu" parent="cm_master.cm_master_m_parent" action="cm_supplier_win_action"/>

    </data>
        
</odoo>
