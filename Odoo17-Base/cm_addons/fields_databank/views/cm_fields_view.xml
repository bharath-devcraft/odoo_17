<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="view_fields_databank_form_one" model="ir.ui.view">
        <field name="name">fields databank form</field>
        <field name="model">fields.databank</field>
        <field name="arch" type="xml">
            <form string="Fields Databank" create="0">
               <header>
                     <button name="button_action" type="object" string="Validate" icon="fa-bug" data-hotkey="t"/>
                </header>
                <sheet>
                  <group string="Char">
                     <group>
                        <field name="name" class="animate-charcter" widget="CopyClipboardChar"/>
                        <field name="short_name" widget="upper_case"/>
                        <field name="quote_ref"/>
                        <field name="address"/>
                        <field name="del_address"/>
                        <field name="entry_spec"/>
                        <field name="mobile_no" widget="numeric"/>
                        <field name="phone_no" widget="numeric"/>
                        <field name="pin_code" widget="no_special_char"/>
                        <field name="description"/>
                        <field name="attach_desc"/>
                        <field name="invoice_status"/>
                        <field name="payment_status"/>
                        <field name="contact_person" widget="proper_case"/>
                        <field name="fax" widget="numeric"/>
                        <field name="website" widget="url"/>
                        <field name="aadhaar_no" widget="numeric"/>
                        <field name="landmark"/>
                        <field name="bank_name" widget="proper_case"/>
                        <field name="ifsc_code" widget="upper_case"/>
                        <field name="branch_name" widget="proper_case"/>
                        <field name="tax_name"/>
                        <field name="mail_from"/>
                        <field name="mail_cc"/>
                        <field name="mail_bcc"/>
                        <field name="interval"/>
                        <field name="subject"/>
                        <field name="ext_no"/>
                        <field name="seq_year"/>
                     </group>
                     <group>
                        <field name="vendor_inv_no"/>
                        <field name="ref_no"/>
                        <field name="draft_name" class="bold-text" widget="CopyClipboardChar"/>
                        <field name="ack_no"/>
                        <field name="cheque_favor"/>
                        <field name="tin_no" widget="numeric"/>
                        <field name="pan_no" widget="upper_case"/>
                        <field name="cst_no" widget="numeric"/>
                        <field name="vat_no"/>
                        <field name="tan_no" widget="upper_case"/>
                        <field name="purpose"/>
                        <field name="email"/>
                        <field name="gst_no" widget="upper_case"/>
                        <field name="street"/>
                        <field name="street1"/>
                        <field name="account_no" widget="numeric"/>
                        <field name="state_code" widget="upper_case"/>
                        <field name="acc_holder_name" widget="upper_case"/>
                        <field name="alias_name"/>
                        <field name="cin_no" widget="upper_case"/>
                        <field name="job_position" widget="proper_case"/>
                        <field name="mail_to"/>
                        <field name="from_mail_id"/>
                        <field name="watcher_mail_id"/>
                        <field name="seq_month"/>
                        <field name="fiscal_year_code"/>
                     </group>
                  </group>
                </sheet>
                <sheet>
                  <group string="Selection">
                     <group>
                        <field name="status"/>
                        <field name="pay_mode"/>
                        <field name="grn_type"/>
                        <field name="entry_from"/>
                        <field name="warranty"/>
                        <field name="sms_status"/>
                        <field name="jc_status"/>
                        <field name="seq_num_reset"/>
                        <field name="company_type"/>
                     </group>
                     <group>
                        <field name="invoice_control"/>
                        <field name="entry_mode"/>
                        <field name="wages_type"/>
                        <field name="priority"/>
                        <field name="tds"/>
                        <field name="email_status"/>
                        <field name="gst_category"/>
                        <field name="grade"/>
                        <field name="rating" widget="priority"/>
                        <field name="format_type"/>
                     </group>
                  </group>
                </sheet>
                <sheet>
                  <group string="Boolean">
                     <group>
                        <field name="active" widget="boolean_toggle"/>
                        <field name="active_rpt" widget="boolean_toggle"/>
                        <field name="active_trans" widget="boolean_toggle"/>
                     </group>
                     <group>
                        <field name="manual_round_off" widget="boolean_toggle"/>
                        <field name="trigger_del" widget="boolean_toggle"/>
                     </group>
                  </group>
                </sheet>
                <sheet>
                  <group string="Many2one">
                     <group>
                        <field name="department_id" options="{'no_create': True}"/>
                        <field name="confirm_user_id" options="{'no_create': True}"/>
                        <field name="brand_id" options="{'no_create': True}"/>
                        <field name="ap_rej_user_id" options="{'no_create': True}"/>
                        <field name="cancel_user_id" options="{'no_create': True}"/>
                        <field name="update_user_id" options="{'no_create': True}"/>
                        <field name="user_id" options="{'no_create': True}"/>
                        <field name="attach_user_id" options="{'no_create': True}"/>
                        <field name="partner_id" options="{'no_create': True}"/>
                        <field name="company_id" options="{'no_create': True}"/>
                        <field name="product_id" options="{'no_create': True}"/>
                        <field name="uom_id" options="{'no_create': True}"/>
                        <field name="model_id" options="{'no_create': True}"/>
                        <field name="catg_id" options="{'no_create': True}"/>
                        <field name="del_term_id" options="{'no_create': True}"/>
                        <field name="inward_id" options="{'no_create': True}"/>
                        <field name="outward_id" options="{'no_create': True}"/>
                        <field name="city_id" options="{'no_create': True}"/>
                        <field name="expense_id" options="{'no_create': True}"/>
                        <field name="task_manager_id" options="{'no_create': True}"/>
                        <field name="title_id" options="{'no_create': True}"/>
                        <field name="revised_user_id" options="{'no_create': True}"/>
                        <field name="parent_id" options="{'no_create': True}"/>
                        <field name="ir_sequence_id" options="{'no_create': True}"/>
                     </group>
                     <group>
                        <field name="destination_id" options="{'no_create': True}"/>
                        <field name="state_id" options="{'no_create': True}"/>
                        <field name="country_id" options="{'no_create': True}"/>
                        <field name="division_id" options="{'no_create': True}"/>
                        <field name="project_id" options="{'no_create': True}"/>
                        <field name="bank_id" options="{'no_create': True}"/>
                        <field name="currency_id" options="{'no_create': True}"/>
                        <field name="period_id" options="{'no_create': True}"/>
                        <field name="account_id" options="{'no_create': True}"/>
                        <field name="transport_id" options="{'no_create': True}"/>
                        <field name="employee_id" options="{'no_create': True}"/>
                        <field name="job_id" options="{'no_create': True}"/>
                        <field name="executive_id" options="{'no_create': True}"/>
                        <field name="segment_id" options="{'no_create': True}"/>
                        <field name="source_id" options="{'no_create': True}"/>
                        <field name="labor_id" options="{'no_create': True}"/>
                        <field name="branch_id" options="{'no_create': True}"/>
                        <field name="tax_group_id" options="{'no_create': True}"/>
                        <field name="inactive_user_id" options="{'no_create': True}"/>
                        <field name="model_id" options="{'no_create': True}"/>
                        <field name="generate_user_id" options="{'no_create': True}"/>
                        <field name="copy_user_id" options="{'no_create': True}"/>
                        <field name="fiscal_year_id" options="{'no_create': True}"/>
                        <field name="po_id" options="{'no_create': True}"/>
                     </group>
                  </group>
                </sheet>
                <sheet>
                  <group string="Many2many">
                     <group>
                        <field name="tax_ids" widget="many2many_tags" options="{'no_create': True}"/>
                        <field name="partner_ids" widget="many2many_tags" options="{'no_create': True}"/>
                        <field name="user_menu_ids" widget="many2many_tags" options="{'no_create': True}"/>
                        <field name="division_ids" widget="many2many_tags" options="{'no_create': True}"/>
                     </group>
                     <group>
                        <field name="attachment_ids" widget="many2many_tags" options="{'no_create': True}"/>
                        <field name="department_ids" widget="many2many_tags" options="{'no_create': True}"/>
                        <field name="groups_ids" widget="many2many_tags" options="{'no_create': True}"/>
                        <field name="access_company_ids" widget="many2many_tags" options="{'no_create': True}"/>
                     </group>
                  </group>
                </sheet>
                <sheet>
                  <group string="Float">
                     <group>
                        <field name="qty"/>
                        <field name="bal_qty"/>
                        <field name="rec_qty"/>
                        <field name="approve_qty"/>
                        <field name="reject_qty"/>
                        <field name="unit_price"/>
                        <field name="unitprice_wt"/>
                        <field name="disc_amt"/>
                        <field name="disc_per"/>
                        <field name="amt"/>
                        <field name="tot_dis_amt"/>
                        <field name="taxable_amt"/>
                        <field name="round_off_amt"/>
                     </group>
                     <group>
                        <field name="tot_amt"/>
                        <field name="net_amt"/>
                        <field name="tax_amt"/>
                        <field name="bal_amt"/>
                        <field name="other_amt"/>
                        <field name="line_tot_amt"/>
                        <field name="tds_amt"/>
                        <field name="freight_amt"/>
                        <field name="amc_period"/>
                        <field name="cgst_amt"/>
                        <field name="sgst_amt"/>
                        <field name="igst_amt"/>
                        <field name="fixed_disc_amt"/>
                        <field name="grand_tot_amt"/>
                     </group>
                  </group>
                </sheet>
                <sheet>
                  <group string="HTML">
                     <group>
                        <field name="note" colspan="2" style="width:500px;" placeholder="Define your terms and conditions ..." options="{'style-inline': true}"/>
                     </group>
                     <group>
                     </group>
                  </group>
                </sheet>
                <sheet>
                  <group string="Integer">
                     <group>
                        <field name="entry_seq"/>
                        <field name="version_no"/>
                        <field name="revise_version"/>
                     </group>
                     <group>
                        <field name="cr_days"/>
                        <field name="line_count"/>
                        <field name="seq_next_number"/>
                     </group>
                  </group>
                </sheet>
                <sheet>
                  <group string="Text">
                     <group>
                        <field name="cancel_remark"/>
                        <field name="inactive_remark"/>
                        <field name="batch_info"/>
                        <field name="nature_of_work"/>
                        <field name="ap_rej_remark"/>
                     </group>
                     <group>
                        <field name="round_off_remark"/>
                        <field name="closer_note"/>
                        <field name="rating_feedback"/>
                        <field name="revise_remark"/>
                        <field name="remark"/>
                     </group>
                  </group>
                </sheet>
                <sheet>
                  <group string="Date">
                     <group>
                        <field name="from_date" options="{'max_date': today}"/>
                        <field name="dc_date"/>
                        <field name="entry_date"/>
                        <field name="request_date" options="{'max_date': today}"/>
                        <field name="draft_date" options="{'max_date': today}"/>
                        <field name="due_date"/>
                        <field name="remind_date" options="{'min_date': today}"/>
                        <field name="vendor_inv_date"/>
                        <field name="cheque_date" options="{'min_date': today}"/>
                        <field name="clearing_date" options="{'min_date': today}"/>
                        <field name="quote_date"/>
                        <field name="eff_from_date" options="{'min_date': today}"/>
                        <field name="ack_date" options="{'max_date': today}"/>
                        <field name="comply_date" options="{'max_date': today}"/>
                        <field name="receive_date" options="{'max_date': today}"/>
                        <field name="fy_control_date"/>
                     </group>
                     <group>
                        <field name="to_date" options="{'warn_future': true}"/>
                        <field name="ship_date" options="{'max_date': today}"/>
                        <field name="stmt_date" options="{'min_date': today}"/>
                        <field name="delivery_date" options="{'min_date': today}"/>
                        <field name="cr_date"/>
                        <field name="dr_date"/>
                        <field name="enq_date" options="{'max_date': today}"/>
                        <field name="customer_po_date"/>
                        <field name="join_date" options="{'max_date': today}"/>
                        <field name="relive_date" options="{'min_date': today}"/>
                        <field name="crt_date"/>
                        <field name="birth_date" options="{'max_date': today}"/>
                        <field name="attach_date"/>
                        <field name="as_on_date"/>
                        <field name="expiry_date" options="{'min_date': today}"/>
                     </group>
                  </group>
                </sheet>
                <sheet>
                  <group string="Datetime">
                     <group>
                        <field name="confirm_date"/>
                        <field name="ap_rej_date"/>
                        <field name="inactive_date"/>
                        <field name="revised_date"/>
                     </group>
                     <group>
                        <field name="cancel_date"/>
                        <field name="update_date"/>
                        <field name="generate_date"/>
                     </group>
                  </group>
                </sheet>
                <sheet>
                  <group string="Image">
                     <group>
                        <field name="sign_img"/>
                     </group>
                     <group>
                     </group>
                  </group>
                </sheet>
               <sheet>
                  <group string="One2many">
                        <field name="line_ids" nolabel="1" style="width:1000px;"/>
                  </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

   <record id="action_fields_databank" model="ir.actions.act_window">
      <field name="name">Fields Databank</field>
      <field name="res_model">fields.databank</field>
      <field name="view_mode">form</field>
   </record>

    <!-- Top menu item -->
    <menuitem name="Fields Databank" id="fields_databank.menu_root" web_icon="fields_databank,static/description/icon.png"
              sequence="100" action="fields_databank.action_fields_databank"/>
  </data>
</odoo>
