<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record model="ir.ui.view" id="ct_sales_lead_form">
      <field name="name">Form View</field>
      <field name="model">ct.sales.lead</field>
      <field name="arch" type="xml">
        <form string="Sales Lead">
            <header>

                <button string="Confirm"
                    icon="fa-thumbs-up"
                    class="btn btn-success"
                    type="object"
                    name="entry_confirm" invisible = "status != 'draft'"
                    confirm="Are you sure to proceed ?"/>
                <button string="Won"
                    icon="fa-thumbs-up"
                    class="btn btn-primary"
                    type="object"
                    name="entry_won" invisible = "status != 'open'"
                    confirm="Are you sure to proceed ?"/>
                <button string="Lost"
                    icon="fa-thumbs-down"
                    class="btn btn-danger"
                    type="object"
                    name="entry_lost" invisible = "status != 'open'"
                    confirm="Are you sure to proceed ?"/>

                <field name="status" widget="statusbar" style="width:700px;"/>                

            </header>
            <sheet>
                <widget name="web_ribbon" title="Won" bg_color="bg-success" invisible = "status != 'won'"/>
                <widget name="web_ribbon" title="Lost" bg_color="bg-danger" invisible = "status != 'lost'"/>
                <group>
                    <group>
                        <field name="name" readonly = "1" force_save="1" class="animate-charcter" widget="CopyClipboardChar"/>
                        <field name="entry_date" string="Lead Date" required = "1" readonly = "status not in ('draft')"/>
                        <field name="customer_type" required = "1" readonly = "status not in ('draft')"/>
                        <field name="customer_id" force_save="1" required = "customer_type == 'existing'" invisible = "customer_type != 'existing'" readonly = "status not in ('draft')" options="{'no_create': True}"/>
                        <field name="customer_name" force_save="1" required = "customer_type == 'new'" invisible = "customer_type != 'new'" readonly = "status not in ('draft')" />
                        <field name="lead_type" required = "1" readonly = "status not in ('draft')"/>
                        <field name="contact_person" required = "1" readonly = "status not in ('draft','open')"/>
                        <field name="mobile_no" widget="numeric" required="1" readonly = "status not in ('draft','open')"/>
                        <field name="email" required="1" readonly = "status not in ('draft','open')"/>
                    </group>
                    <group>
                        <field name="address" force_save="1" required="1" readonly = "status not in ('draft','open')"/>
                        <field name="enq_source_id" required="1" readonly = "status not in ('draft','open')" options="{'no_create': True}"/>
                        <field name="service_name" required="1" readonly = "status not in ('draft','open')"/>
                        <field name="product" string="Product List" readonly = "status not in ('draft','open')"/>
                        <field name="last_followup_date" force_save="1" invisible="status == 'draft'" readonly = "1"/>
                        <field name="feedback" string="Last Customer Feedback" force_save="1" invisible="status == 'draft'" readonly = "1"/>
                        <field name="next_followup_date" force_save="1" required="status == 'draft'" readonly = "status != 'draft'"/>
                        <field name="status" readonly = "1" force_save="1" invisible="1"/>
                    </group>
                </group>
                
                <notebook>
                    <page string="Progress Log" >
                        <field name="line_ids" string="Progress Log" colspan="4" nolabel="1" readonly = "status not in ('draft','open')">
                            <tree string="Progress Log" editable="bottom">
                                <field name="status" column_invisible="1"/>
                                <field name="header_id" column_invisible="1"/>
                                <field name="next_followup_date" required="1" readonly="readonly_flag == True" width="200px"/>
                                <field name="remarks" string="Notes" required="1" readonly="readonly_flag == True"/>
                                <field name="user_id" string="Added By"/>
                                <field name="crt_date" string="Added Date"/>
                                <field name="readonly_flag" force_save="1" column_invisible="1"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Attachments" >
                        <field name="line_ids_a" string="Attachments" colspan="4" nolabel="1" readonly = "status not in ('draft','open')">
                            <tree string="Attachments" editable="bottom">
                                <field name="status" column_invisible="1"/>
                                <field name="header_id" column_invisible="1"/>
                                <field name="company_id" column_invisible="1"/>
                                <field name="attach_desc" required="1"/>
                                <field name="attachment_ids" required="1" widget="single_file_binary" options="{'no_create_edit': True}"/>
                                <field name="attach_user_id" readonly = "1" force_save="1"/>
                                <field name="attach_date" readonly = "1" force_save="1"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Lost Reason" invisible="status == 'draft'">
                        <group>
                            <field name="rej_remark_id" string="Reason" readonly = "status not in ('open')" options="{'no_create': True}"/>
                            <field name="lost_remark" string="Remark" readonly = "status not in ('open')"/>
                        </group>
                    </page>
                    <page string="Entry Info">
                        <group>
                            <group>
                                <field name="company_id" force_save="1"/> 
                                <field name="fy_control_date" readonly = "1" force_save="1"/>
                                <field name="active_rpt"/>
                            </group>
                            <group>
                                <field name="active" widget="boolean_toggle"/>
                                <field name="entry_mode" force_save="1"/>
                                <field name="active_trans"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="user_id" widget="many2one_avatar_user" />
                                <field name="confirm_user_id" invisible="status == 'draft'" widget="many2one_avatar_user" />
                                <field name="won_lost_user_id" invisible="status in ('draft')" widget="many2one_avatar_user" />
                                <field name="update_user_id" widget="many2one_avatar_user" />
                            </group>
                            <group>
                                <field name="crt_date" />
                                <field name="confirm_date" invisible="status == 'draft'" />
                                <field name="won_lost_date" invisible="status in ('draft')" />
                                <field name="update_date" />
                            </group>
                        </group>
                    </page>
                </notebook>
                <notebook>
                    <page string="Additional Contacts" >
                        <field name="line_ids_b" string="Additional Contacts" colspan="4" nolabel="1" readonly = "status not in ('draft','open')">
                            <tree string="Additional Contacts">
                                <field name="contact_person" string="Name"/>
                                <field name="designation"/>
                                <field name="work_location"/>
                                <field name="mobile_no"/>
                                <field name="email"/>
                            </tree>
                            <form string="Additional Contacts">
                                <group>
                                    <group>
                                        <field name="header_id" invisible="1"/>
                                        <field name="contact_person" string="Name" required="1"/>
                                        <field name="designation"/>
                                        <field name="dep_name"/>
                                        <field name="work_location" required="1"/>
                                        <field name="company_id" invisible="1"/>
                                    </group>  
                                    <group>
                                        <field name="mobile_no" widget="numeric" required="1"/>
                                        <field name="whatsapp_no" widget="numeric" required="1"/>
                                        <field name="phone_no" widget="numeric"/>
                                        <field name="email" required="1"/>
                                        <field name="skype"/>
                                    </group>
                                </group>
                            </form>
                        </field>
                    </page>
                </notebook>
                <group>
                    <field name="remarks"/>
                </group>
                <div class="oe_chatter">
                    <field name="message_ids"/>
                </div>  
            </sheet>
        </form>
      </field>
    </record>

    <record id="ct_sales_lead_tree_js" model="ir.ui.view">
        <field name="name">List Dashboard View</field>
        <field name="model">ct.sales.lead</field>
        <field name="priority" eval="10"/>
        <field name="arch" type="xml">
            <tree string="Sales Lead" js_class="ct_sales_lead_list"
                sample="1"
                decoration-info = "status == 'draft'"
                decoration-bf = "status in ('open', 'draft')"
                decoration-success = "status == 'won'"
                decoration-muted = "status == 'lost'">

                <field name="name" decoration-bf="1"/>
                <field name="entry_date" string="Lead Date"/>
                <field name="customer_type"/>
                <field name="customer_name"/>
                <field name="contact_person"/>
                <field name="lead_type"/>
                <field name="mobile_no"/>
                <field name="confirm_user_id" string="Sales Executive"/>
                <field name="status" widget="badge" 
                    decoration-info = "status == 'draft'"
                    decoration-bf = "status == 'open'"
                    decoration-success = "status == 'won'"
                    decoration-muted = "status == 'lost'"/>
            </tree>
        </field>
    </record>

    <record id="ct_sales_lead_tree" model="ir.ui.view">
        <field name="name">List View</field>
        <field name="model">ct.sales.lead</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <tree string="Sales Lead"
                sample="1"
                decoration-info = "status == 'draft'"
                decoration-bf = "status in ('open', 'draft')"
                decoration-success = "status == 'won'"
                decoration-muted = "status == 'lost'">

                <field name="name" decoration-bf="1"/>
                <field name="entry_date" string="Lead Date"/>
                <field name="customer_type"/>
                <field name="customer_name"/>
                <field name="contact_person"/>
                <field name="lead_type"/>
                <field name="mobile_no"/>
                <field name="confirm_user_id" string="Sales Executive"/>
                <field name="status" widget="badge" 
                    decoration-info = "status == 'draft'"
                    decoration-bf = "status == 'open'"
                    decoration-success = "status == 'won'"
                    decoration-muted = "status == 'lost'"/>
            </tree>
        </field>
    </record>

    <record id="ct_sales_lead_search" model="ir.ui.view">
        <field name="name">Search View</field>
        <field name="model">ct.sales.lead</field>
        <field name="arch" type="xml">
            <search string="Sales Lead">
                <field name="name"/>
                <field name="customer_name"/>
                <field name="contact_person"/>
                <field name="mobile_no"/>
                <field name="product" string="Product List"/>
                <field name="feedback" string="Last Customer Feedback"/>

                <filter name="Draft" domain="[('status', '=', 'draft')]"/>
                <filter name="Open" domain="[('status', '=', 'open')]"/>
                <filter name="Won" domain="[('status', '=', 'won')]"/>
                <filter name="Lost" domain="[('status', '=', 'lost')]"/>
                <filter name="my_entries" string="My Entries" domain="[('user_id', '=', uid)]"/>
                <filter name="My Draft" string="My Draft" domain="[('user_id', '=', uid),('status', '=', 'draft')]"/>
                <filter name="My Open" string="My Open" domain="[('user_id', '=', uid),('status', '=', 'open')]"/>
                <filter name="My Won" string="My Won" domain="[('user_id', '=', uid),('status', '=', 'won')]"/>
                <filter name="My Lost" string="My Lost" domain="[('user_id', '=', uid),('status', '=', 'lost')]"/>
                <filter name="Hidden" domain="[('active', '=', False)]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Lead Date" name="entry_date" domain="[]" context="{'group_by': 'entry_date'}"/>
                    <filter string="Customer Type" name="customer_type" domain="[]" context="{'group_by': 'customer_type'}"/>
                    <filter string="Customer Name" name="customer_name" domain="[]" context="{'group_by': 'customer_name'}"/>
                    <filter string="Lead Type" name="lead_type" domain="[]" context="{'group_by': 'lead_type'}"/>
                    <filter string="Lead Source" name="enq_source_id" domain="[]" context="{'group_by': 'enq_source_id'}"/>
                    <filter string="Sales Executive" name="confirm_user_id" domain="[]" context="{'group_by': 'confirm_user_id'}"/>
                    <filter string="Next Follow Up Date" name="next_followup_date" domain="[]" context="{'group_by': 'next_followup_date'}"/>
                    <filter string="Lost Reason" name="rej_remark_id" domain="[]" context="{'group_by': 'rej_remark_id'}"/>
                    <filter string="Status" name="status" domain="[]" context="{'group_by': 'status'}"/>
                    <filter string="Entry Mode" name="entry_mode" domain="[]" context="{'group_by': 'entry_mode'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="ct_sales_lead_kanban" model="ir.ui.view">
        <field name="name">Kanban View</field>
        <field name="model">ct.sales.lead</field>
        <field name="arch" type="xml">
            <kanban string="Sales Lead" class="o_kanban_mobile" sample="1" quick_create="false">
                <field name="name"/>
                <field name="entry_date"/>
                <field name="customer_name"/>
                <field name="service_name"/>
                <field name="confirm_user_id"/>
                <field name="last_followup_date"/>
                <field name="status"/>
                <progressbar field="status"
                    colors='{"draft": "info","approved": "bf","won": "success","lost": "primary"}'/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="kanban-card"> 
                            <div class="kanban-table">
                                <div class="kanban-row">
                                    <div class="kanban-cell" t-att-title="'Lead No'">
                                        <field style="color: #4d4d4d; font-weight: bold; font-size: 18px;" name="name"/>
                                    </div>
                                    <div class="kanban-cell" t-att-title="'Lead Date'">
                                        <field style="color: #808080; font-weight: bold; font-size: 14px;" name="entry_date"/>
                                    </div>
                                </div>
                                <div class="kanban-row">
                                    <div class="kanban-cell" t-att-title="'Customer Name'">
                                        <i class="fa fa-user" style="color: #E91E63;" title="Customer Icon"></i> <field name="customer_name"/>
                                    </div>
                                    <div class="kanban-cell" t-att-title="'Required Services'">
                                        <i class="fa fa-cogs" style="color: #4CAF50;" title="Service Icon"></i> <field name="service_name"/>
                                    </div>
                                </div>
                                <div class="kanban-row">
                                    <div class="kanban-cell" t-att-title="'Sales Executive'">
                                        <i class="fa fa-briefcase" style="color: #2196F3;" title="Executive Icon"></i> <field name="confirm_user_id"/>
                                    </div>
                                    <div class="kanban-cell" t-att-title="'Last Followup Date'">
                                        <i class="fa fa-calendar" style="color: #4CAF50;" title="Date Icon"></i> <field name="last_followup_date"/>
                                    </div>
                                </div>
                                <div class="kanban-row">
                                    <div class="kanban-cell" t-att-title="'Status'">
                                        <field name="status" widget="label_selection" options="{'classes': {'draft': 'info', 'approved': 'default', 'won': 'success', 'lost': 'primary'}}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="ct_sales_lead_graph" model="ir.ui.view">
       <field name="name">Graph View</field>
       <field name="model">ct.sales.lead</field>
       <field name="arch" type="xml">
            <graph string="Sales Lead" sample="1" disable_linking="True" stacked="0" type="pie">
                <field name="status"/>
                <field name="id" string="Count" type="measure" operator="count"/>
            </graph>
        </field>
    </record>

    <record id="ct_sales_lead_win_action" model="ir.actions.act_window" >
      <field name="name">Sales Lead</field>
      <field name="res_model">ct.sales.lead</field>
      <field name="view_mode">tree,form,kanban,graph</field>
        <field name="domain">[]</field>
        <field name="view_id" ref="ct_sales_lead_tree_js"/>
        <field name="search_view_id" ref="ct_sales_lead_search"/>
        <field name="context">{}</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            No record found. Let's create one!
          </p><p>
            This is for base transaction.
          </p>
        </field>
    </record>

    <record id="ct_view_sales_lead_tree" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="ct_sales_lead.ct_sales_lead_tree_js"/>
        <field name="act_window_id" ref="ct_sales_lead_win_action"/>
    </record>

    <record id="ct_view_sales_lead_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="2"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="ct_sales_lead.ct_sales_lead_form"/>
        <field name="act_window_id" ref="ct_sales_lead_win_action"/>
    </record>

    <record id="ct_view_sales_lead_kanban" model="ir.actions.act_window.view">
        <field name="sequence" eval="3"/>
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="ct_sales_lead.ct_sales_lead_kanban"/>
        <field name="act_window_id" ref="ct_sales_lead_win_action"/>
    </record>

    <record id="ct_view_sales_lead_graph" model="ir.actions.act_window.view">
        <field name="sequence" eval="4"/>
        <field name="view_mode">graph</field>
        <field name="view_id" ref="ct_sales_lead.ct_sales_lead_graph"/>
        <field name="act_window_id" ref="ct_sales_lead_win_action"/>
    </record>

    <menuitem name="CRM" id="ct_crm_m_root" web_icon="ct_sales_lead,static/description/crm.png" sequence="6"/>

    <menuitem name="CRM" id="ct_crm_m_parent" parent="ct_crm_m_root" sequence="2"/>

    <menuitem name="Sales Lead" id="ct_sales_lead_act_menu" parent="ct_crm_m_parent"
              action="ct_sales_lead_win_action" sequence="2"/>
  </data>
</odoo>
