<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="cm_product_template_accessories_form" model="ir.ui.view">
            <field name="name">Form View</field>
            <field name="model">product.template</field>
            <field name="arch" type="xml">
                <form string="Flexi Accessories">
                    <header>
                        <button string="Approve" 
                            class="btn btn-success" 
                            icon="fa-thumbs-up" 
                            type="object" 
                            name="entry_approve" 
                            invisible = "status not in ('draft','editable')" 
                            confirm="Are you sure to proceed ?"/>
                        <button string="Set To Draft"
                            class="btn btn-primary"
                            type="object" name="entry_draft"
                            invisible = "status != 'active'" 
                            confirm="Are you sure to proceed ?"/>
                        <button string="Inactive"
                            class="btn btn-danger"
                            icon="fa-thumbs-down" 
                            type="object" name="entry_inactive" 
                            invisible = "status != 'active'" 
                            confirm="Are you sure to proceed ?"/>
                        <field name="status" widget="statusbar" style="width:700px;"/>                
                    </header>
                    
                    <sheet>                    
                        <widget name="web_ribbon" title="Active" bg_color="bg-success" invisible = "status != 'active'"/>
                        <group>
                            <group >
                                <label for="name" class="name-lable"/>
                                <div>
                                    <field name="name" class="name-value" widget="no_special_char" required="1" readonly = "status not in ('draft','editable')"/>
                                </div>
                                <field name="short_name" widget="upper_case" required="1" readonly = "status not in ('draft','editable')"/>
                                <field name="categ_id" string="Category" required="1" domain="[('status', '=', 'active'),('active_trans', '=', True)]" readonly = "status not in ('draft','editable')" />
                                <field name="hs_id" required="1" options="{'no_create': True}" readonly = "status not in ('draft','editable')"/>
                                <field name="custom_type" required="1" invisible="1" readonly = "1"/>
                                <field name="serial_no_req" required="1" readonly = "status not in ('draft','editable')"/>
                            </group>
                            <group>
                                <field name="uom_po_id" string="Purchase UOM" options="{'no_create': True}" required="1" domain="[('status', '=', 'active'),('active_trans', '=', True)]" readonly = "status not in ('draft','editable')" />
                                <field name="uom_id" string="Store UOM" options="{'no_create': True}" required="1" domain="[('status', '=', 'active'),('active_trans', '=', True)]" readonly = "status not in ('draft','editable')" />
                                <field name="uom_coff" string="UOM Coff" required="1" readonly = "status not in ('draft','editable')"/>
                                <field name="list_price" string="Sales Price(INR)" invisible="1" readonly = "status not in ('draft','editable')"/>
                                <field name="standard_price" string="Cost Price(INR)" readonly = "status not in ('draft','editable')"/>
                                
                                <field name="status" readonly = "1" invisible="1"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Attachments" >
                                <field name="line_ids_a" nolabel="1" readonly = "status not in ('draft','editable')">
                                    <tree editable="bottom">
                                        <field name="header_id" column_invisible="1"/>
                                        <field name="attach_desc" required="1"/>
                                        <field name="attachment_ids" required="1" widget="single_file_binary" options="{'no_create_edit': True}"/>
                                        <field name="attach_user_id" force_save="1" readonly="1"/>
                                        <field name="attach_date" force_save="1" readonly="1"/> 
                                        <field name="company_id" column_invisible="1"/>                              
                                    </tree>
                                </field>
                            </page>
                            <page string="Inactive Remarks" invisible = "status not in ('active','inactive')">
                                <field name="inactive_remark" readonly = "status != 'active'" nolabel="1"/>
                            </page>
                            <page string="Entry Info">
                                <group>
                                    <group>
                                        <field name="company_id"/>
                                        <field name="active_trans"/>
                                        <field name="active_rpt"/>
                                    </group>
                                    <group>
                                        <field name="active" widget="boolean_toggle"/>
                                        <field name="entry_mode"/>
                                    </group>
                                </group>
                                <group>
                                    <group>
                                        <field name="user_id" widget="many2one_avatar_user" />
                                        <field name="ap_rej_user_id" string="Approved By" widget="many2one_avatar_user" invisible = "status not in ('active','inactive')"/>
                                        <field name="inactive_user_id" widget="many2one_avatar_user" invisible = "status != 'inactive'" />
                                        <field name="update_user_id" widget="many2one_avatar_user"/>
                                    </group>
                                    <group>
                                        <field name="crt_date"/>
                                        <field name="ap_rej_date" string="Approved Date" invisible = "status not in ('active','inactive')"/>
                                        <field name="inactive_date" invisible = "status != 'inactive'"/>
                                        <field name="update_date"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                        <group>
                            <field name="remarks"  placeholder="Write your remarks here."/>
                        </group>
                        <div class="oe_chatter">
                            <field name="message_ids"/>
                        </div>  
                    </sheet>
                </form>
            </field>
        </record>

        <record id="cm_product_template_accessories_tree_js" model="ir.ui.view">
            <field name="name">Dashboard View</field>
            <field name="model">product.template</field>
            <field name="priority" eval="10"/>
            <field name="arch" type="xml">
                <tree string="Flexi Accessories" js_class="cm_product_template_accessories_list"
                        decoration-info="status == 'draft'" 
                        decoration-success = "status == 'editable'"
                        decoration-bf = "status in ('active','draft')"
                        decoration-primary = "status == 'inactive'">
                    <field name="short_name"/>
                    <field name="name"/>
                    <field name="uom_po_id" string="Purchase UOM" />
                    <field name="uom_id" string="Store UOM"/>
                    <field name="list_price" string="Sales Price(INR)"/>
                    <field name="status" widget="badge" decoration-info = "status == 'draft'"
                        decoration-success = "status == 'editable'"
                        decoration-bf = "status == 'active'"
                        decoration-primary = "status == 'inactive'"/>
                    <field name="ap_rej_user_id" string="Approved By"/>
                    <field name="crt_date"/>
                </tree>
            </field>
        </record>   

        <record id="cm_product_template_general_tree_js" model="ir.ui.view">
            <field name="name">Dashboard View</field>
            <field name="model">product.template</field>
            <field name="priority" eval="10"/>
            <field name="arch" type="xml">
                <tree string="Flexi Accessories" js_class="cm_product_template_general_list"
                        decoration-info="status == 'draft'" 
                        decoration-success = "status == 'editable'"
                        decoration-bf = "status in ('active','draft')"
                        decoration-primary = "status == 'inactive'">
                    <field name="short_name"/>
                    <field name="name"/>
                    <field name="uom_po_id" string="Purchase UOM" />
                    <field name="uom_id" string="Store UOM"/>
                    <field name="list_price" string="Sales Price(INR)"/>
                    <field name="status" widget="badge" decoration-info = "status == 'draft'"
                        decoration-success = "status == 'editable'"
                        decoration-bf = "status == 'active'"
                        decoration-primary = "status == 'inactive'"/>
                    <field name="ap_rej_user_id" string="Approved By"/>
                    <field name="crt_date"/>
                </tree>
            </field>
        </record>

        <record id="cm_product_template_accessories_tree" model="ir.ui.view">
            <field name="name">Tree View</field>
            <field name="model">product.template</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <tree string="Flexi Accessories"
                        decoration-info="status == 'draft'" 
                        decoration-success = "status == 'editable'"
                        decoration-bf = "status in ('active','draft')"
                        decoration-primary = "status == 'inactive'">
                    <field name="short_name"/>
                    <field name="name"/>
                    <field name="uom_po_id" string="Purchase UOM" />
                    <field name="uom_id" string="Store UOM"/>
                    <field name="list_price" string="Sales Price(INR)"/>
                    <field name="status" widget="badge" decoration-info = "status == 'draft'"
                        decoration-success = "status == 'editable'"
                        decoration-bf = "status == 'active'"
                        decoration-primary = "status == 'inactive'"/>
                    <field name="ap_rej_user_id" string="Approved By"/>
                    <field name="crt_date"/>
                </tree>
            </field>
        </record>

        
        <record id="cm_product_template_accessories_search" model="ir.ui.view">
            <field name="name">Search View</field>
            <field name="model">product.template</field>
            <field name="arch" type="xml">
                <search string="Flexi Accessories">
                    <field name="name" string="Name" filter_domain="[('name','ilike',self)]"/>
                    <field name="short_name" string="Short Name" filter_domain="[('short_name','ilike',self)]"/>
                    
                    <filter name="my_entries" string="My Entries" domain="[('user_id', '=', uid)]"/> 
                    <filter name="Draft" domain="[('status', '=', 'draft')]"/>
                    <filter name="Editable" domain="[('status', '=', 'editable')]"/>
                    <filter name="Active" domain="[('status', '=', 'active')]"/>
                    <filter name="Inactive" domain="[('status', '=', 'inactive')]"/>
                    <filter name="My Draft" string="My Draft" domain="[('user_id', '=', uid),('status', '=', 'draft')]"/>
                    <filter name="My Editable" string="My Editable" domain="[('user_id', '=', uid),('status', '=', 'editable')]"/>
                    <filter name="My Active" string="My Active" domain="[('user_id', '=', uid),('status', '=', 'active')]"/>
                    <filter name="My Inactive" string="My Inactive" domain="[('user_id', '=', uid),('status', '=', 'inactive')]"/>
                    <filter name="Hidden" domain="[('active', '=', False)]"/>
                    
                    <group expand="0" string="Group By">
                        <filter string="Purchase UOM" name="uom_po_id" domain="[]" context="{'group_by': 'status'}"/>
                        <filter string="Store UOM" name="uom_id" domain="[]" context="{'group_by': 'status'}"/>
                        <filter string="Status" name="status" domain="[]" context="{'group_by': 'status'}"/>
                        <filter string="Approved By" name="ap_rej_user_id" domain="[]" context="{'group_by': 'ap_rej_user_id'}"/>
                        <filter string="Approved Date" name="ap_rej_date" domain="[]" context="{'group_by': 'ap_rej_date'}"/>
                    </group>
                </search>
            </field>
        </record>


        <record id="cm_product_template_accessories_win_action" model="ir.actions.act_window">
            <field name="name">Flexi Accessories</field>
            <field name="res_model">product.template</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('custom_type','=','flexi_accessories')]</field>
            <field name="search_view_id" ref="cm_product_template_accessories_search"/>
            <field name="context">{'default_custom_type':'flexi_accessories'}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">No records found. Let's create one!</p>
            </field>
            <field name="view_ids" eval="[(5, 0, 0), 
                                  (0, 0, {'view_mode': 'tree', 'view_id': ref('cm_product_template_accessories_tree_js')}),
                                  (0, 0, {'view_mode': 'form', 'view_id': ref('cm_product_template_accessories_form')})
                                 ]"/>
        </record>
        
        <record id="cm_product_template_general_win_action" model="ir.actions.act_window">
            <field name="name">General Product</field>
            <field name="res_model">product.template</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('custom_type','=','consumables')]</field>
            <field name="search_view_id" ref="cm_product_template_accessories_search"/>
            <field name="context">{'default_custom_type':'consumables'}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">No records found. Let's create one!</p>
            </field>
            <field name="view_ids" eval="[(5, 0, 0), 
                                  (0, 0, {'view_mode': 'tree', 'view_id': ref('cm_product_template_general_tree_js')}),
                                  (0, 0, {'view_mode': 'form', 'view_id': ref('cm_product_template_accessories_form')})
                                 ]"/>
        </record>


        <menuitem name="Flexi Accessories" id="cm_product_template_accessories_act_menu" parent="cm_master.cm_crm_master_m_parent" action="cm_product_template_accessories_win_action" sequence="122"/>
     
        <menuitem name="General Product" id="cm_product_template_general_act_menu" parent="cm_master.cm_store_master_m_parent" action="cm_product_template_general_win_action" sequence="2"/> 

    </data>
        
</odoo>
