<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="cm_carrier_sea_freight_rate_form" model="ir.ui.view">
            <field name="name">Form View</field>
            <field name="model">cm.carrier.sea.freight.rate</field>
            <field name="arch" type="xml">
                <form string="Carrier Sea Freight Rate">
                    <header>
                        <button string="Approve" 
                            class="btn btn-success" 
                            icon="fa-thumbs-up" 
                            type="object" 
                            name="entry_approve" 
                            invisible = "status not in ('draft','editable')" 
                            confirm="Are you sure to proceed ?"/>
                        <button string="Set To Draft"
                            class="btn btn-primary"
                            type="object" name="entry_draft"
                            invisible = "status != 'active'" 
                            confirm="Are you sure to proceed ?"/>
                        <button string="Inactive"
                            class="btn btn-danger"
                            icon="fa-thumbs-down" 
                            type="object" name="entry_inactive" 
                            invisible = "status != 'active'" 
                            confirm="Are you sure to proceed ?"/>
                        <field name="status" widget="statusbar" style="width:700px;"/>                
                    </header>
                    
                    <sheet>                    
                        <widget name="web_ribbon" title="Active" bg_color="bg-success" invisible = "status != 'active'"/>
                        <group>
                            <group >
                                <label for="carrier_id" class="name-lable"/>
                                <div>
                                    <field name="carrier_id" class="name-value" required="1" options="{'no_create': True}" readonly = "status not in ('draft','editable')"/>
                                    <field name="name" class="name-value" widget="no_special_char" invisible="1" force_save="1" readonly = "status not in ('draft','editable')"/>
                                </div>
                                <field name="vendor_id" required="1" options="{'no_create': True}" readonly = "status not in ('draft','editable')"/>
                                <field name="carrier_type" required="1" readonly = "status not in ('draft','editable')"/>
                                <field name="transit_time" required="1" readonly = "status not in ('draft','editable')"/>
                            </group>
                                
                                    
                            <group>
                                <field name="currency_id" required="1" options="{'no_create': True}" readonly = "status not in ('draft','editable')"/>
                                <field name="ves_serv_route_id" required="1" options="{'no_create': True}" readonly = "status not in ('draft','editable')"/>
                                <field name="routing" required="1" readonly = "status not in ('draft','editable')"/>
                                <field name="status" readonly = "1" invisible="1"/>
                            </group>
                        </group>
                        
                        <group string="POL Details">
                            <group >
                                <field name="pol_ship_term_id" required="1" options="{'no_create': True}" readonly = "status not in ('draft','editable')"/>
                                <field name="pol_country_id" required="1" options="{'no_create': True}" readonly = "status not in ('draft','editable')"/>
                            </group>
                            <group>
                                <field name="pol_port_id" required="1" options="{'no_create': True}" readonly = "status not in ('draft','editable')"/>
                            </group>
                        </group>
                        
                        <group string="POD Details">
                            <group >
                                <field name="pod_ship_term_id" required="1" options="{'no_create': True}" readonly = "status not in ('draft','editable')"/>
                                <field name="pod_country_id" required="1" options="{'no_create': True}" readonly = "status not in ('draft','editable')"/>
                            </group>
                            <group>
                                <field name="pod_port_id" required="1" options="{'no_create': True}" readonly = "status not in ('draft','editable')"/>
                                <field name="pod_terminal_id" required="1" options="{'no_create': True}" readonly = "status not in ('draft','editable')"/>
                            </group>
                        </group>

                        <group string = "Rate Details(Per Tank)">
                            <group >
                                <label string="Sea Freight(Non DG)" for= "sf_laden"  class="o_label_bold_l"/>
                                <div class="o_row">
                                    <div class="o_col">
                                        <label string="Laden" for="sf_laden" class="o_label_bold_f"/>
                                        <field name="sf_laden" required="1" readonly = "status not in ('draft','editable')"/>
                                    </div>
                                    <div class="o_col">
                                        <label string="MTY" for="sf_mty"  class="o_label_bold_f"/>
                                        <field name="sf_mty" required="1" readonly = "status not in ('draft','editable')"/>
                                    </div>
                                </div>

                                <label string="BAF/ LSS/ EFS" for= "baf_laden" class="o_label_bold_l"/>
                                <div class="o_row">
                                    <div class="o_col">
                                        <label string="Laden" for="baf_laden" class="o_label_bold_f"/>
                                        <field name="baf_laden" required="1" readonly = "status not in ('draft','editable')"/>
                                    </div>
                                    <div class="o_col">
                                        <label string="MTY" for="baf_mty" class="o_label_bold_f"/>
                                        <field name="baf_mty" required="1" readonly = "status not in ('draft','editable')"/>
                                    </div>
                                </div> 
                                
                                <label string="ECRS/ PCS" for= "ecrs_laden" class="o_label_bold_l"/>
                                <div class="o_row">
                                    <div class="o_col">
                                        <label string="Laden" for="ecrs_laden" class="o_label_bold_f"/>
                                        <field name="ecrs_laden" required="1" readonly = "status not in ('draft','editable')"/>
                                    </div>
                                    <div class="o_col">
                                        <label string="MTY" for="ecrs_mty" class="o_label_bold_f"/>
                                        <field name="ecrs_mty" required="1" readonly = "status not in ('draft','editable')"/>
                                    </div>
                                </div>

                                <label string="EWRS" for= "ewrs_laden" class="o_label_bold_l"/>
                                <div class="o_row">
                                    <div class="o_col">
                                        <label string="Laden" for="ewrs_laden" class="o_label_bold_f"/>
                                        <field name="ewrs_laden" required="1" readonly = "status not in ('draft','editable')"/>
                                    </div>
                                    <div class="o_col">
                                        <label string="MTY" for="ewrs_mty" class="o_label_bold_f"/>
                                        <field name="ewrs_mty" required="1" readonly = "status not in ('draft','editable')"/>
                                    </div>
                                </div>
                            </group>

                            <group>

                                <label string="ENS" for= "ewrs_laden" class="o_label_bold_l"/>
                                <div class="o_row">
                                    <div class="o_col">
                                        <label string="Laden" for="ens_laden" class="o_label_bold_f"/>
                                        <field name="ens_laden" required="1" readonly = "status not in ('draft','editable')"/>
                                    </div>
                                    <div class="o_col">
                                        <label string="MTY" for="ens_mty" class="o_label_bold_f"/>
                                        <field name="ens_mty" required="1" readonly = "status not in ('draft','editable')"/>
                                    </div>
                                </div>

                                <label string="IPS" for= "ips_laden" class="o_label_bold_l"/>
                                <div class="o_row">
                                    <div class="o_col">
                                        <label string="Laden" for="ips_laden" class="o_label_bold_f"/>
                                        <field name="ips_laden" required="1" readonly = "status not in ('draft','editable')"/>
                                    </div>
                                    <div class="o_col">
                                        <label string="MTY" for="ips_mty" class="o_label_bold_f"/>
                                        <field name="ips_mty" required="1" readonly = "status not in ('draft','editable')"/>
                                    </div>
                                </div>
                                
                                <label string="Others" for= "oth_laden" class="o_label_bold_l"/>
                                <div class="o_row">
                                    <div class="o_col">
                                        <label string="Laden" for="oth_laden" class="o_label_bold_f"/>
                                        <field name="oth_laden" required="1" readonly = "status not in ('draft','editable')"/>
                                    </div>
                                    <div class="o_col">
                                        <label string="MTY" for="oth_mty" class="o_label_bold_f"/>
                                        <field name="oth_mty" required="1" readonly = "status not in ('draft','editable')"/>
                                    </div>
                                </div>

                                <label string="DG Surcharge" for= "pack_type1" class="o_label_bold_l"/>
                                <div class="o_row" >
                                    <div class="o_col">
                                        <label string="Packing Type I" for="pack_type1" class="o_label_bold_f"/>
                                        <field name="pack_type1" required="1" readonly = "status not in ('draft','editable')"/>
                                    </div>
                                    <div class="o_col">
                                        <label string="Packing Type II" for="pack_type2" class="o_label_bold_f"/>
                                        <field name="pack_type2" required="1" readonly = "status not in ('draft','editable')"/>
                                    </div>
                                    <div class="o_col">
                                        <label string="Packing Type III" for="pack_type3" class="o_label_bold_f"/>
                                        <field name="pack_type3" required="1" readonly = "status not in ('draft','editable')"/>
                                    </div>
                                </div>
                                
                            </group>
                        </group>
                        <group string = "Rate Details(Per BL)">
                            <group >
                                <field name="afr" required="1" readonly = "status not in ('draft','editable')"/>
                                <field name="ets" required="1" readonly = "status not in ('draft','editable')"/>
                                <field name="acd" required="1" readonly = "status not in ('draft','editable')"/>
                                <field name="flexi_surcharge" required="1" readonly = "status not in ('draft','editable')"/>
                            </group>
                            <group>
                                <field name="tank_surcharge" required="1" readonly = "status not in ('draft','editable')"/>
                                <field name="over_wgt_surcharge" required="1" readonly = "status not in ('draft','editable')"/>
                                <field name="haz" required="1" readonly = "status not in ('draft','editable')"/>
                            </group>
                        </group>     
                        
                        <group string="Total Value">
                            <group>
                                <label for= "tot_laden" class="o_label_bold_c"/>
                                <div>
                                    <div class="o_address_format">
                                        <field name="tot_laden" style="width: 30%%"  required="1" readonly = "1" force_save="1"/>
                                        <field name="currency_id"  style="width: 20%%"  options="{'no_create': True}" required="1"  readonly = "1" force_save="1"/>
                                    </div>
                                </div>

                                <label for= "tot_laden_dg" class="o_label_bold_c"/>
                                <div>
                                    <div class="o_address_format">
                                        <field name="tot_laden_dg" style="width: 30%%"  required="1" readonly = "1" force_save="1"/>
                                        <field name="currency_id"  style="width: 20%%"  options="{'no_create': True}" required="1"  readonly = "1" force_save="1"/>
                                    </div>
                                </div>
                            </group>
                            <group>
                                <label for= "tot_mty" class="o_label_bold_c"/>
                                <div>
                                    <div class="o_address_format">
                                        <field name="tot_mty" style="width: 30%%" required="1" readonly = "1" force_save="1"/>
                                        <field name="currency_id" style="width: 20%%"  options="{'no_create': True}" required="1" readonly = "1" force_save="1"/>
                                    </div>
                                </div>
                                 
                            </group>
                        </group>
                        <group string="More Details">
                            <group >
                                <field name="valid_from_date" required="1" readonly = "status not in ('draft','editable')"/>
                                <field name="valid_to_date" required="1" readonly = "status not in ('draft','editable')"/>
                                <field name="contract_no" readonly = "status not in ('draft','editable')"/>
                            </group>
                            <group>
                                <field name="fre_pay_center" readonly = "status not in ('draft','editable')"/>
                                <field name="received_from" required="1" readonly = "status not in ('draft','editable')"/>
                                <field name="rate_received_date" required="1" readonly = "status not in ('draft','editable')"/>
                            </group>
                        </group>  
                        <group>
                            <field name="remarks"  placeholder="Write your remarks here."/>
                        </group>   
                        
                        <notebook>
                            <page string="Inactive Remarks" invisible = "status not in ('active','inactive')">
                                <field name="inactive_remark" readonly = "status != 'active'" nolabel="1"/>
                            </page>
                            <page string="Entry Info">
                                <group>
                                    <group>
                                        <field name="company_id"/>
                                        <field name="active_trans"/>
                                        <field name="active_rpt"/>
                                    </group>
                                    <group>
                                        <field name="active" widget="boolean_toggle"/>
                                        <field name="entry_mode"/>
                                    </group>
                                </group>
                                <group>
                                    <group>
                                        <field name="user_id" widget="many2one_avatar_user" />
                                        <field name="ap_rej_user_id" string="Approved By" widget="many2one_avatar_user" invisible = "status not in ('active','inactive')"/>
                                        <field name="inactive_user_id" widget="many2one_avatar_user" invisible = "status != 'inactive'" />
                                        <field name="update_user_id" widget="many2one_avatar_user"/>
                                    </group>
                                    <group>
                                        <field name="crt_date"/>
                                        <field name="ap_rej_date" string="Approved Date" invisible = "status not in ('active','inactive')"/>
                                        <field name="inactive_date" invisible = "status != 'inactive'"/>
                                        <field name="update_date"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                        
                        <div class="oe_chatter">
                            <field name="message_ids"/>
                        </div>  
                    </sheet>
                </form>
            </field>
        </record>

        <record id="cm_carrier_sea_freight_rate_tree_js" model="ir.ui.view">
            <field name="name">Dashboard View</field>
            <field name="model">cm.carrier.sea.freight.rate</field>
            <field name="priority" eval="10"/>
            <field name="arch" type="xml">
                <tree string="Carrier Sea Freight Rate" js_class="cm_carrier_sea_freight_rate_list"
                        decoration-info="status == 'draft'" 
                        decoration-success = "status == 'editable'"
                        decoration-bf = "status in ('active','draft')"
                        decoration-primary = "status == 'inactive'">
                    <field name="carrier_id"/>
                    <field name="vendor_id"/>
                    <field name="carrier_type"/>
                    <field name="ves_serv_route_id"/>
                    <field name="pol_port_id"/>
                    <field name="pod_port_id"/>
                    <field name="tot_laden" string="Total(Laden)"/>
                    <field name="tot_mty" string="Total(MTY)"/>
                    <field name="currency_id"/>
                    <field name="status" widget="badge" decoration-info = "status == 'draft'"
                        decoration-success = "status == 'editable'"
                        decoration-bf = "status == 'active'"
                        decoration-primary = "status == 'inactive'"/>
                </tree>
            </field>
        </record>

        <record id="cm_carrier_sea_freight_rate_tree" model="ir.ui.view">
            <field name="name">Tree View</field>
            <field name="model">cm.carrier.sea.freight.rate</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <tree string="Carrier Sea Freight Rate"
                        decoration-info="status == 'draft'" 
                        decoration-success = "status == 'editable'"
                        decoration-bf = "status in ('active','draft')"
                        decoration-primary = "status == 'inactive'">
                    <field name="carrier_id"/>
                    <field name="vendor_id"/>
                    <field name="carrier_type"/>
                    <field name="ves_serv_route_id"/>
                    <field name="pol_port_id"/>
                    <field name="pod_port_id"/>
                    <field name="tot_laden" string="Total(Laden)"/>
                    <field name="tot_mty" string="Total(MTY)"/>
                    <field name="currency_id"/>
                    <field name="status" widget="badge" decoration-info = "status == 'draft'"
                        decoration-success = "status == 'editable'"
                        decoration-bf = "status == 'active'"
                        decoration-primary = "status == 'inactive'"/>
                </tree>
            </field>
        </record>

        
        <record id="cm_carrier_sea_freight_rate_search" model="ir.ui.view">
            <field name="name">Search View</field>
            <field name="model">cm.carrier.sea.freight.rate</field>
            <field name="arch" type="xml">
                <search string="Carrier Sea Freight Rate">
                    <field name="carrier_id" filter_domain="[('carrier_id','ilike',self)]"/>
                    <field name="vendor_id" filter_domain="[('vendor_id','ilike',self)]"/>
                    <field name="ves_serv_route_id" filter_domain="[('ves_serv_route_id','ilike',self)]"/>
                    <field name="pol_port_id" filter_domain="[('pol_port_id','ilike',self)]"/>
                    <field name="pod_port_id" filter_domain="[('pod_port_id','ilike',self)]"/>
                    
                    <filter name="my_entries" string="My Entries" domain="[('user_id', '=', uid)]"/> 
                    <filter name="Draft" domain="[('status', '=', 'draft')]"/>
                    <filter name="Editable" domain="[('status', '=', 'editable')]"/>
                    <filter name="Active" domain="[('status', '=', 'active')]"/>
                    <filter name="Inactive" domain="[('status', '=', 'inactive')]"/>
                    <filter name="My Draft" string="My Draft" domain="[('user_id', '=', uid),('status', '=', 'draft')]"/>
                    <filter name="My Editable" string="My Editable" domain="[('user_id', '=', uid),('status', '=', 'editable')]"/>
                    <filter name="My Active" string="My Active" domain="[('user_id', '=', uid),('status', '=', 'active')]"/>
                    <filter name="My Inactive" string="My Inactive" domain="[('user_id', '=', uid),('status', '=', 'inactive')]"/>
                    <filter name="Hidden" domain="[('active', '=', False)]"/>
                    
                    <group expand="0" string="Group By">
                        <filter string="Vendor Name" name="vendor_id" domain="[]" context="{'group_by': 'vendor_id'}"/>
                        <filter string="Service Name" name="ves_serv_route_id" domain="[]" context="{'group_by': 'ves_serv_route_id'}"/>
                        <filter string="Carrier Type" name="carrier_type" domain="[]" context="{'group_by': 'carrier_type'}"/>
                        <filter string="POL" name="pol_port_id" domain="[]" context="{'group_by': 'pol_port_id'}"/>
                        <filter string="POD" name="pod_port_id" domain="[]" context="{'group_by': 'pod_port_id'}"/>
                        <filter string="Currency" name="currency_id" domain="[]" context="{'group_by': 'currency_id'}"/>
                        <filter string="Approved By" name="ap_rej_user_id" domain="[]" context="{'group_by': 'ap_rej_user_id'}"/>
                        <filter string="Approved Date" name="ap_rej_date" domain="[]" context="{'group_by': 'ap_rej_date'}"/>
                    </group>
                </search>
            </field>
        </record>


        <record id="cm_carrier_sea_freight_rate_win_action" model="ir.actions.act_window">
            <field name="name">Carrier Sea Freight Rate</field>
            <field name="res_model">cm.carrier.sea.freight.rate</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="view_id" ref="cm_carrier_sea_freight_rate_tree_js"/>
            <field name="search_view_id" ref="cm_carrier_sea_freight_rate_search"/>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">No records found. Let's create one!</p>
            </field>
        </record>

        <menuitem name="Carrier Sea Freight Rate" id="cm_carrier_sea_freight_rate_act_menu" parent="cm_master.cm_tariff_master_m_parent" action="cm_carrier_sea_freight_rate_win_action" sequence="29"/>

    </data>
        
</odoo>
