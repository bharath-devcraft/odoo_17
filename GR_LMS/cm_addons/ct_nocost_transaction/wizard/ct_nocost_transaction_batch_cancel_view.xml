<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="ct_nocost_transaction_batch_cancel_form" model="ir.ui.view">
        <field name="name">Batch Cancel Form View</field>
        <field name="model">ct.nocost.transaction.batch.cancel</field>
        <field name="arch" type="xml">
            <form string="Batch Cancel">
                <field name="transaction_ids" invisible="1"/>
                <field name="batch_info" readonly="1" force_save="1"/>
                <group>
                    <field name="cancel_remark"/>
                </group>
                <footer>
                    <button class="btn-primary"
                            name="action_batch_cancel"
                            type="object"
                            string="Submit"/>
                    <button string="Discard" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_ct_nocost_transaction_batch_cancel" model="ir.actions.act_window">
        <field name="name">Batch Cancel</field>
        <field name="res_model">ct.nocost.transaction.batch.cancel</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="ct_nocost_transaction_batch_cancel_form"/>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_ct_nocost_transaction"/>
        <field name="binding_view_types">list</field>
    </record>

</odoo>
