<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record model="ir.ui.view" id="ct_enquiry_form">
      <field name="name">Form View</field>
      <field name="model">ct.enquiry</field>
      <field name="arch" type="xml">
        <form string="Enquiry">
            <header>

                <button string="Confirm"
                    icon="fa-thumbs-up"
                    class="btn btn-success"
                    type="object"
                    name="entry_confirm" invisible = "status != 'draft'"
                    confirm="Are you sure to proceed ?"/>
                <button string="Cancel"
                    icon="fa-thumbs-down"
                    class="btn btn-primary"
                    type="object"
                    name="entry_cancel" invisible = "status not in ('rfq_sent','quotation_sent')"
                    confirm="Are you sure to proceed ?"/>

                <field name="status" widget="statusbar" style="width:700px;"/>                

            </header>
            <sheet>
                <widget name="web_ribbon" title="Won" bg_color="bg-success" invisible = "status != 'won'"/>
                <widget name="web_ribbon" title="Lost" bg_color="bg-danger" invisible = "status != 'lost'"/>
                <group>
                    <group>
                        <field name="name" readonly = "1" force_save="1" class="animate-charcter" widget="CopyClipboardChar"/>
                        <field name="entry_date" string="Enquiry Date" required = "1" readonly = "status not in ('draft')"/>
                        <field name="service_id" options="{'no_create': True}" required = "1" readonly = "status not in ('draft')"/>
                        <field name="generated_user_id" options="{'no_create': True}" required="1" readonly = "status not in ('draft')"/>
                        <field name="enq_source_id" options="{'no_create': True}" required = "1" readonly = "status not in ('draft')"/>
                        <field name="ref_no" string="Reference Details / Date" readonly = "status not in ('draft')"/>
                        <field name="bkg_party_id" options="{'no_create': True}" readonly = "status not in ('draft')"/>
                        <field name="new_bkg_party" readonly = "status not in ('draft')"/>
                        <field name="bus_vert_id" options="{'no_create': True}" readonly = "1" force_save="1"/>
                        <field name="contact_person" required = "1" readonly = "status not in ('draft')" force_save="1"/>
                    </group>
                    <group>
                        <field name="mobile_no" required = "1" readonly = "status not in ('draft')" force_save="1"/>
                        <field name="email" required = "1" readonly = "status not in ('draft')" force_save="1"/>
                        <field name="shipper_cus_id" options="{'no_create': True}" readonly = "status not in ('draft')"/>
                        <field name="new_shipper" readonly = "status not in ('draft')"/>
                        <field name="agent_id" options="{'no_create': True}" required = "1" readonly = "status not in ('draft')"/>
                        <field name="rebate" required = "1" readonly = "status not in ('draft')"/>
                        <label for="cust_rate"/>
                        <div>
                            <div class="o_address_format">
                                <field name="cust_rate" style="width: 25%%" readonly = "status not in ('draft')"/>
                                <field name="currency_id" style="width: 22%%" options="{'no_create': True}" required = "cust_rate > 0" readonly = "status not in ('draft')"/>
                            </div>
                        </div>
                        <field name="expiry_date" string="Last Date to Submit Quote" options="{'min_date': today}" required = "1" readonly = "status not in ('draft')"/>
                        <field name="status" readonly = "1" force_save="1" invisible="1"/>
                    </group>
                </group>
                <group string="Product Details">
                    <group>
                        <field name="product_id" options="{'no_create': True}" readonly = "status not in ('draft')"/>
                        <field name="product" readonly = "status not in ('draft')"/>
                        <field name="dg_product" required = "product_id == False" readonly = "product_id != False or status not in ('draft')" force_save="1"/>
                        <field name="un_no" invisible = "dg_product == 'no' or product_id == False" readonly = "1" force_save="1"/>
                        <field name="sub_class1" invisible = "dg_product == 'no' or product_id == False" readonly = "1" force_save="1"/>
                        <field name="sub_class2" invisible = "dg_product == 'no' or product_id == False" readonly = "1" force_save="1"/>
                    </group>
                    <group>
                        <field name="tank_t_code" string="Tank Type(T Code)" force_save="1" readonly = "status not in ('draft')"/>
                        <field name="tank_capacity"
                            required = "'DOTR' in combined_codes or 'DOTC' in combined_codes
                                         or 'DOTT' in combined_codes or 'DOTL' in combined_codes"
                            invisible = "'DOTR' not in combined_codes and 'DOTC' not in combined_codes
                                        and 'DOTT' not in combined_codes and 'DOTL' not in combined_codes"
                            readonly = "status not in ('draft')"/>
                        <field name="tank_qty"
                            required = "'OSTE' in combined_codes or 'OSTI' in combined_codes  or 'ISTL' in combined_codes
                                        or 'SOCT' in combined_codes or 'TRAN' in combined_codes or 'DOTR' in combined_codes
                                        or 'DOTC' in combined_codes or 'DOTT' in combined_codes or 'DOTL' in combined_codes"
                            invisible = "'OSTE' not in combined_codes and 'OSTI' not in combined_codes  and 'ISTL' not in combined_codes
                                        and 'SOCT' not in combined_codes and 'TRAN' not in combined_codes and 'DOTR' not in combined_codes
                                        and 'DOTC' not in combined_codes and 'DOTT' not in combined_codes and 'DOTL' not in combined_codes"
                            readonly = "status not in ('draft')"/>
                        <field name="container_category" 
                            required = "'OSTE' in combined_codes or 'OSTI' in combined_codes  or 'ISTL' in combined_codes
                                        or 'SOCT' in combined_codes or 'TRAN' in combined_codes or 'DOTR' in combined_codes
                                        or 'DOTC' in combined_codes or 'DOTT' in combined_codes or 'DOTL' in combined_codes"
                            invisible = "'OSTE' not in combined_codes and 'OSTI' not in combined_codes  and 'ISTL' not in combined_codes
                                        and 'SOCT' not in combined_codes and 'TRAN' not in combined_codes and 'DOTR' not in combined_codes
                                        and 'DOTC' not in combined_codes and 'DOTT' not in combined_codes and 'DOTL' not in combined_codes"
                            readonly = "status not in ('draft')" force_save="1"/>
                        <field name="service_ids" widget="many2many_tags" options="{'no_create': True}" readonly = "status not in ('draft')"/>
                        <field name="spl_req" readonly = "status not in ('draft')"/>
                    </group>
                </group>
                
                <group string="Trip Move Details" invisible="'OSTE' not in combined_codes and 'OSTI' not in combined_codes  and 'DOTC' not in combined_codes and 'DOTT' not in combined_codes and 'SOCT' not in combined_codes">
                    <group>
                        <field name="ship_term_id" options="{'no_create': True}" 
                            required="'OSTE' in combined_codes or 'OSTI' in combined_codes or 'DOTC' in combined_codes or 'DOTT' in combined_codes or 'SOCT' in combined_codes" 
                            readonly = "status not in ('draft')"/>
                        <field name="net_rental" 
                            required = "'OSTE' in combined_codes or 'OSTI' in combined_codes or 'DOTC' in combined_codes or 'DOTT' in combined_codes or 'SOCT' in combined_codes"
                            readonly = "status not in ('draft')"/>
                        <field name="switch_bl_req" readonly = "status not in ('draft')"/>
                        <field name="pol_port_id" options="{'no_create': True}" 
                            required = "'OSTE' in combined_codes or 'OSTI' in combined_codes or 'DOTC' in combined_codes or 'DOTT' in combined_codes or 'SOCT' in combined_codes"
                            readonly = "status not in ('draft')"/>
                        <field name="pol_terminal_id" options="{'no_create': True}" 
                            required = "'OSTE' in combined_codes or 'OSTI' in combined_codes or 'DOTC' in combined_codes or 'DOTT' in combined_codes or 'SOCT' in combined_codes"
                            readonly = "status not in ('draft')" force_save="1"/>
                    </group>
                    <group>
                        <field name="pol_free_days" 
                            required = "'OSTE' in combined_codes or 'OSTI' in combined_codes or 'DOTC' in combined_codes or 'DOTT' in combined_codes or 'SOCT' in combined_codes"
                            readonly = "status not in ('draft')"/>
                        <field name="pod_port_id" options="{'no_create': True}" 
                            required = "'OSTE' in combined_codes or 'OSTI' in combined_codes or 'DOTC' in combined_codes or 'DOTT' in combined_codes or 'SOCT' in combined_codes"
                            readonly = "status not in ('draft')"/>
                        <field name="pod_terminal_id" options="{'no_create': True}" 
                            required = "'OSTE' in combined_codes or 'OSTI' in combined_codes or 'DOTC' in combined_codes or 'DOTT' in combined_codes or 'SOCT' in combined_codes"
                            readonly = "status not in ('draft')" force_save="1"/>
                        <field name="pod_free_days"
                            required = "'OSTE' in combined_codes or 'OSTI' in combined_codes or 'DOTC' in combined_codes or 'DOTT' in combined_codes or 'SOCT' in combined_codes"
                            readonly = "status not in ('draft')"/>
                        <field name="trip_pickup_depot_id" options="{'no_create': True}" 
                            required = "'OSTE' in combined_codes or 'OSTI' in combined_codes or 'DOTC' in combined_codes or 'DOTT' in combined_codes"
                            readonly = "status not in ('draft')"/>
                    </group>
                </group>

                <group string="Tank Lease Details" invisible="'ISTL' not in combined_codes and 'DOTL' not in combined_codes">
                    <group>
                        <label for="lease_period"/>
                        <div class="o_address_format">
                            <field name="lease_period" style="width: 25%%"
                                required = "'ISTL' in combined_codes or 'DOTL' in combined_codes"
                                readonly = "status not in ('draft')"/>
                            <field name="period_choices" style="width: 22%%"
                                required = "'ISTL' in combined_codes or 'DOTL' in combined_codes"
                                readonly = "status not in ('draft')"/>
                        </div>
                        <field name="pickup_port_id" options="{'no_create': True}"
                            readonly = "status not in ('draft')"/>
                        <field name="pickup_depot_id" options="{'no_create': True}"
                            readonly = "status not in ('draft')"/>
                    </group>
                    <group>
                        <field name="drop_port_id" options="{'no_create': True}" 
                            readonly = "status not in ('draft')"/>
                        <field name="drop_depot_id" options="{'no_create': True}" 
                            required = "'ISTL' in combined_codes or 'DOTL' in combined_codes"
                            readonly = "status not in ('draft')"/>
                    </group>
                </group>

                <group string="Transport Details" invisible="'TRAN' not in combined_codes and 'DOTR' not in combined_codes">
                    <group>
                        <field name="gr_dep_id" options="{'no_create': True}"
                            required = "'TRAN' in combined_codes or 'DOTR' in combined_codes"
                            readonly = "status not in ('draft')"/>
                        <field name="prod_weight_kg" 
                            required = "'TRAN' in combined_codes or 'DOTR' in combined_codes"
                            readonly = "status not in ('draft')"/>
                        <field name="dotr_pol_free_days" 
                            invisible="'DOTR' not in combined_codes"
                            required = "'DOTR' in combined_codes"
                            readonly = "status not in ('draft')"/>
                        <field name="dotr_pod_free_days"
                            invisible="'DOTR' not in combined_codes"
                            required = "'DOTR' in combined_codes"
                            readonly = "status not in ('draft')"/>
                        <field name="trailer_type" 
                            required = "'TRAN' in combined_codes or 'DOTR' in combined_codes" 
                            readonly = "status not in ('draft')"/>
                        <field name="free_hrs" 
                            required = "'TRAN' in combined_codes or 'DOTR' in combined_codes"
                            readonly = "status not in ('draft')"/>
                        <field name="trans_route_id" options="{'no_create': True}" readonly = "status not in ('draft')"/>
                        <field name="from_trans_loc_id" options="{'no_create': True}" readonly = "1" force_save="1"/>
                        <field name="from_city_id" options="{'no_create': True}" readonly = "1" force_save="1"/>
                        <field name="from_state_id" options="{'no_create': True}" readonly = "1" force_save="1"/>
                        <field name="to_trans_loc_id" options="{'no_create': True}" readonly = "1" force_save="1"/>
                        <field name="to_city_id" options="{'no_create': True}" readonly = "1" force_save="1"/>
                        <field name="to_state_id" options="{'no_create': True}" readonly = "1" force_save="1"/>
                    </group>
                    <group>
                        <field name="trip_start_date" readonly = "status not in ('draft')" options="{'min_date': today}"/>
                        <field name="trans_pickup_depot_id" options="{'no_create': True}"
                            required = "'TRAN' in combined_codes or 'DOTR' in combined_codes"
                            readonly = "status not in ('draft')"/>
                        <field name="empty_pickup_loc_id" options="{'no_create': True}"
                            required = "'TRAN' in combined_codes or 'DOTR' in combined_codes"
                            readonly = "status not in ('draft')"/>
                        <field name="load_address" 
                            required = "'TRAN' in combined_codes or 'DOTR' in combined_codes"
                            readonly = "status not in ('draft')"/>
                        <field name="load_zip_code"
                            required = "'TRAN' in combined_codes or 'DOTR' in combined_codes"
                            readonly = "status not in ('draft')"/>
                        <field name="unload_address"
                            required = "'TRAN' in combined_codes or 'DOTR' in combined_codes"
                            readonly = "status not in ('draft')"/>
                        <field name="unload_zip_code"
                            required = "'TRAN' in combined_codes or 'DOTR' in combined_codes"
                            readonly = "status not in ('draft')"/>
                        <field name="empty_offload_loc_id" options="{'no_create': True}"
                            required = "'TRAN' in combined_codes or 'DOTR' in combined_codes"
                            readonly = "status not in ('draft')"/>
                    </group>
                </group>

                <group string="Flexi Bag Details" invisible="'FLBS' not in combined_codes">
                    <group>
                        <field name="flexi_bag_type_id" options="{'no_create': True}"
                            required = "'FLBS' in combined_codes"
                            readonly = "status not in ('draft')"/>
                        <field name="bag_qty"
                            required = "'FLBS' in combined_codes"
                            readonly = "status not in ('draft')"/>
                        <field name="del_address"
                            required = "'FLBS' in combined_codes"
                            readonly = "status not in ('draft')"/>
                        <field name="city_id"
                            options="{'no_create': True}"
                            required = "'FLBS' in combined_codes"
                            readonly = "status not in ('draft')"/>
                        <field name="same_as_delivery"
                            required = "'FLBS' in combined_codes"
                            readonly = "status not in ('draft')"/>
                        <field name="stuff_address"
                            required = "'FLBS' in combined_codes"
                            readonly = "status not in ('draft')" force_save="1"/>
                    </group>
                    <group>
                        <field name="bag_req_date"
                            required = "'FLBS' in combined_codes"
                            readonly = "status not in ('draft')" options="{'min_date': today}"/>
                        <field name="vendor_id" options="{'no_create': True}" readonly = "status not in ('draft')"/>
                        <field name="accessories_req"
                            required = "'FLBS' in combined_codes"
                            readonly = "status not in ('draft')"/>
                        <field name="pod_services"
                            required = "'FLBS' in combined_codes"
                            readonly = "status not in ('draft')"/>
                    </group>
                </group>

                <group string="Flexi Operation Details" invisible="'FLOS' not in combined_codes">
                    <group>
                        <field name="flexi_stuff_qty" 
                            required="'FLOS' in combined_codes"
                            readonly = "status not in ('draft')"/>
                        <field name="stuff_address"
                            required="'FLOS' in combined_codes"
                            readonly = "status not in ('draft')"/>
                    </group>
                    <group>
                        <field name="stuff_date"
                            required="'FLOS' in combined_codes"
                            readonly = "status not in ('draft')" options="{'min_date': today}"/>
                    </group>
                </group>

                <group string="SOC Details" invisible="'SOCT' not in combined_codes">
                    <group>
                        <field name="carrier_id" options="{'no_create': True}" readonly = "status not in ('draft')"/>
                        <field name="insurance" 
                            required="'SOCT' in combined_codes"
                            readonly = "status not in ('draft')"/>
                    </group>
                    <group>
                        <field name="tank_test_cert_ids"
                            readonly = "status not in ('draft')" 
                            widget="single_file_binary" options="{'no_create_edit': True}"/>
                        <field name="tank_clean_cert_ids"
                            readonly = "status not in ('draft')"
                            widget="single_file_binary" options="{'no_create_edit': True}"/>
                    </group>
                </group>

                <group invisible="'FLAS' not in combined_codes">
                    <group>
                        <field name="del_address"
                            required = "'FLAS' in combined_codes"
                            readonly = "status not in ('draft')"/>
                    </group>
                    <group>
                        <field name="city_id"
                            options="{'no_create': True}"
                            required = "'FLAS' in combined_codes"
                            readonly = "status not in ('draft')"/>
                    </group>
                </group>
                <notebook>
                    <page string="Flexi Accessories Details" invisible="'FLAS' not in combined_codes">
                        <field name="line_ids" string="Flexi Accessories Details" colspan="4" nolabel="1" readonly = "status not in ('draft')" force_save="1">
                            <tree string="Flexi Accessories Details">
                                <field name="status" column_invisible="1"/>
                                <field name="header_id" column_invisible="1"/>
                                <field name="company_id" column_invisible="1"/>
                                <field name="accessory_set_id"/>
                                <field name="accessory_set_qty" width="200px"/>
                                <field name="line_count" string="No of Items" width="200px"/>
                            </tree>
                            <form string="Flexi Accessories Details">
                                <group>
                                    <group>
                                        <field name="status" invisible="1"/>
                                        <field name="header_id" invisible="1"/>
                                        <field name="company_id" invisible="1"/>
                                        <field name="accessory_set_id" options="{'no_create': True}" required="1"/>
                                        <field name="accessory_set_qty" required="1"/>
                                    </group>  
                                    <group>
                                        <field name="line_count" string="No of Items"/>
                                    </group>
                                </group>
                                <notebook>
                                    <page string="Details">
                                        <field name="line_ids" nolabel="1" force_save="1">
                                            <tree editable="bottom">   
                                                <field name="status" column_invisible="1"/>
                                                <field name="header_id" column_invisible="1"/>
                                                <field name="company_id" column_invisible="1"/>
                                                <field name="is_select" required="1"/>
                                                <field name="accessories_id" options="{'no_create': True}" required="1"/>
                                                <field name="uom_id" options="{'no_create': True}" required="1"/>
                                                <field name="qty" required="1"/>
                                            </tree>
                                        </field>
                                    </page>
                                </notebook>
                            </form>
                        </field>
                    </page>
                    <page string="Attachments" >
                        <field name="line_ids_a" string="Attachments" colspan="4" nolabel="1" readonly = "status not in ('draft')">
                            <tree string="Attachments" editable="bottom">
                                <field name="status" column_invisible="1"/>
                                <field name="header_id" column_invisible="1"/>
                                <field name="company_id" column_invisible="1"/>
                                <field name="attach_desc" required="1"/>
                                <field name="attachment_ids" required="1" widget="single_file_binary" options="{'no_create_edit': True}"/>
                                <field name="attach_user_id" readonly = "1" force_save="1"/>
                                <field name="attach_date" readonly = "1" force_save="1"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Cancel Reason" invisible="status not in ('rfq_sent', 'quotation_sent', 'cancelled')">
                        <group>
                            <field name="rej_remark_id" string="Reason" readonly = "status not in ('rfq_sent', 'quotation_sent')" options="{'no_create': True}"/>
                            <field name="cancel_remark" string="Remark" readonly = "status not in ('rfq_sent', 'quotation_sent')"/>
                        </group>
                    </page>
                    <page string="More Info">
                        <group>
                            <group>
                                <field name="draft_name" string="Enquiry Draft No" invisible="1"/>
                                <field name="executed_user_id" options="{'no_create': True}"/>
                            </group>
                            <group>
                                <field name="draft_date" readonly = "1" invisible="1"/>
                                <field name="bus_location" string="Business Location" readonly = "1" force_save="1"/>
                            </group>
                        </group>
                    </page>
                    <page string="Entry Info">
                        <group>
                            <group>
                                <field name="company_id" force_save="1"/> 
                                <field name="fy_control_date" readonly = "1" force_save="1"/>
                                <field name="active_rpt"/>
                                <field name="combined_codes" invisible="1" force_save="1"/>
                            </group>
                            <group>
                                <field name="active" widget="boolean_toggle"/>
                                <field name="entry_mode" force_save="1"/>
                                <field name="active_trans"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="user_id" widget="many2one_avatar_user" />
                                <field name="confirm_user_id" invisible="status == 'draft'" widget="many2one_avatar_user" />
                                <field name="cancel_user_id" invisible="status not in ('cancelled')" widget="many2one_avatar_user" />
                                <field name="update_user_id" widget="many2one_avatar_user" />
                            </group>
                            <group>
                                <field name="crt_date" />
                                <field name="confirm_date" invisible="status == 'draft'" />
                                <field name="cancel_date" invisible="status not in ('cancelled')" />
                                <field name="update_date" />
                            </group>
                        </group>
                    </page>
                </notebook>
                <group>
                    <field name="remarks"/>
                </group>
                <div class="oe_chatter">
                    <field name="message_ids"/>
                </div>  
            </sheet>
        </form>
      </field>
    </record>

    <record id="ct_enquiry_tree_js" model="ir.ui.view">
        <field name="name">List Dashboard View</field>
        <field name="model">ct.enquiry</field>
        <field name="priority" eval="10"/>
        <field name="arch" type="xml">
            <tree string="Enquiry" js_class="ct_enquiry_list"
                sample="1"
                decoration-info = "status == 'draft'"
                decoration-bf = "status in ('draft', 'rfq_sent')"
                decoration-warning = "status == 'quotation_sent'"
                decoration-success = "status == 'won'"
                decoration-muted = "status == 'lost'"
                decoration-primary = "status == 'cancelled'">

                <field name="name" decoration-bf="1"/>
                <field name="entry_date"/>
                <field name="service_id"/>
                <field name="bkg_party_id"/>
                <field name="product_id" string="Product"/>
                <field name="dg_product" string="DG"/>
                <field name="expiry_date" string="Last Date to Submit"/>
                <field name="executed_user_id"/>
                <field name="status" widget="badge" 
                    decoration-info = "status == 'draft'"
                    decoration-bf = "status == 'rfq_sent'"
                    decoration-warning = "status == 'quotation_sent'"
                    decoration-success = "status == 'won'"
                    decoration-muted = "status == 'lost'"
                    decoration-primary = "status == 'cancelled'"/>
            </tree>
        </field>
    </record>

    <record id="ct_enquiry_tree" model="ir.ui.view">
        <field name="name">List View</field>
        <field name="model">ct.enquiry</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <tree string="Enquiry"
                sample="1"
                decoration-info = "status == 'draft'"
                decoration-bf = "status in ('draft', 'rfq_sent')"
                decoration-warning = "status == 'quotation_sent'"
                decoration-success = "status == 'won'"
                decoration-muted = "status == 'lost'"
                decoration-primary = "status == 'cancelled'">

                <field name="name" decoration-bf="1"/>
                <field name="entry_date"/>
                <field name="service_id"/>
                <field name="bkg_party_id"/>
                <field name="product_id" string="Product"/>
                <field name="dg_product" string="DG"/>
                <field name="expiry_date" string="Last Date to Submit"/>
                <field name="executed_user_id"/>
                <field name="status" widget="badge" 
                    decoration-info = "status == 'draft'"
                    decoration-bf = "status == 'rfq_sent'"
                    decoration-warning = "status == 'quotation_sent'"
                    decoration-success = "status == 'won'"
                    decoration-muted = "status == 'lost'"
                    decoration-primary = "status == 'cancelled'"/>
            </tree>
        </field>
    </record>

    <record id="ct_enquiry_search" model="ir.ui.view">
        <field name="name">Search View</field>
        <field name="model">ct.enquiry</field>
        <field name="arch" type="xml">
            <search string="Enquiry">
                <field name="name"/>
                <field name="product_id"/>

                <filter name="Draft" domain="[('status', '=', 'draft')]"/>
                <filter name="RFQ Sent" domain="[('status', '=', 'rfq_sent')]"/>
                <filter name="Quotation Sent" domain="[('status', '=', 'quotation_sent')]"/>
                <filter name="Won" domain="[('status', '=', 'won')]"/>
                <filter name="Lost" domain="[('status', '=', 'lost')]"/>
                <filter name="Cancelled" domain="[('status', '=', 'cancelled')]"/>
                <filter name="my_entries" string="My Entries" domain="[('user_id', '=', uid)]"/>
                <filter name="My Draft" string="My Draft" domain="[('user_id', '=', uid),('status', '=', 'draft')]"/>
                <filter name="My RFQ Sent" string="My RFQ Sent" domain="[('user_id', '=', uid),('status', '=', 'rfq_sent')]"/>
                <filter name="My Quotation Sent" string="Quotation Sent" domain="[('user_id', '=', uid),('status', '=', 'quotation_sent')]"/>
                <filter name="My Won" string="My Won" domain="[('user_id', '=', uid),('status', '=', 'won')]"/>
                <filter name="My Lost" string="My Lost" domain="[('user_id', '=', uid),('status', '=', 'lost')]"/>
                <filter name="My Cancelled" string="My Cancelled" domain="[('user_id', '=', uid),('status', '=', 'cancelled')]"/>
                <filter name="Hidden" domain="[('active', '=', False)]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Entry Date" name="entry_date" domain="[]" context="{'group_by': 'entry_date'}"/>
                    <filter string="Service Name" name="service_id" domain="[]" context="{'group_by': 'service_id'}"/>
                    <filter string="Enquiry Source" name="enq_source_id" domain="[]" context="{'group_by': 'enq_source_id'}"/>
                    <filter string="Agent Name" name="agent_id" domain="[]" context="{'group_by': 'agent_id'}"/>
                    <filter string="Product Name" name="product_id" domain="[]" context="{'group_by': 'product_id'}"/>
                    <filter string="Dangerous Goods" name="dg_product" domain="[]" context="{'group_by': 'dg_product'}"/>
                    <filter string="Last Date to Submit" name="expiry_date" domain="[]" context="{'group_by': 'expiry_date'}"/>
                    <filter string="Executed By" name="executed_user_id" domain="[]" context="{'group_by': 'executed_user_id'}"/>
                    <filter string="Status" name="status" domain="[]" context="{'group_by': 'status'}"/>
                    <filter string="Entry Mode" name="entry_mode" domain="[]" context="{'group_by': 'entry_mode'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="ct_enquiry_kanban" model="ir.ui.view">
        <field name="name">Kanban View</field>
        <field name="model">ct.enquiry</field>
        <field name="arch" type="xml">
            <kanban string="Enquiry" class="o_kanban_mobile" sample="1" quick_create="false">
                <field name="name" decoration-bf="1"/>
                <field name="entry_date"/>
                <field name="agent_id"/>
                <field name="executed_user_id"/>
                <field name="expiry_date" string="Last Date to Submit Quote"/>
                <field name="status"/>
                <progressbar field="status"
                    colors='{"draft": "info","rfq_sent": "bf","quotation_sent": "warning","won": "success","lost": "primary","lost": "cancelled"}'/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="kanban-card"> 
                            <div class="kanban-table">
                                <div class="kanban-row">
                                    <div class="kanban-cell" t-att-title="'Enquiry No'">
                                        <field style="color: #4d4d4d; font-weight: bold; font-size: 18px;" name="name"/>
                                    </div>
                                    <div class="kanban-cell" t-att-title="'Enquiry Date'">
                                        <field style="color: #808080; font-weight: bold; font-size: 14px;" name="entry_date"/>
                                    </div>
                                </div>
                                <div class="kanban-row">
                                    <div class="kanban-cell" t-att-title="'Agent Name'">
                                        <i class="fa fa-user" style="color: #E91E63;" title="Customer Icon"></i> <field name="agent_id"/>
                                    </div>
                                    <div class="kanban-cell" t-att-title="'DG'">
                                        <i class="fa fa-cogs" style="color: #4CAF50;" title="DG Icon"></i> <field name="dg_product"/>
                                    </div>
                                </div>
                                <div class="kanban-row">
                                    <div class="kanban-cell" t-att-title="'Executed By'">
                                        <i class="fa fa-briefcase" style="color: #2196F3;" title="Executive Icon"></i> <field name="executed_user_id"/>
                                    </div>
                                    <div class="kanban-cell" t-att-title="'Last Date to Submit Quote'">
                                        <i class="fa fa-calendar" style="color: #4CAF50;" title="Date Icon"></i> <field name="expiry_date"/>
                                    </div>
                                </div>
                                <div class="kanban-row">
                                    <div class="kanban-cell" t-att-title="'Status'">
                                        <field name="status" widget="label_selection" options="{'classes': {'draft': 'info', 'rfq_sent': 'default', 'quotation_sent': 'warning', 'won': 'success', 'lost': 'primary', 'cancelled': 'primary'}}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="ct_enquiry_graph" model="ir.ui.view">
       <field name="name">Graph View</field>
