<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_ct_quotations_document">
 <t t-call="web.external_layout">
   <t t-set="doc" t-value="doc.with_context(lang=doc.service_id.company_id.partner_id.lang)" />
        <t t-set="consignor_address">
            <t t-if="doc.bkg_party_id">
                <div style="text-align: left">
                    <b><t t-esc="doc.bkg_party_id.name" /></b>,<br/>
                    <t t-esc="doc.bkg_party_id.street" />, 
                    <t t-if="doc.bkg_party_id.street1">, <t t-esc="doc.bkg_party_id.street1" /></t>
                    <t t-esc="doc.bkg_party_id.city_id.name" />-
                    <t t-esc="doc.bkg_party_id.pin_code" />,
                    <t t-esc="doc.bkg_party_id.state_id.name" />, 
                    <t t-esc="doc.bkg_party_id.country_id.name" />, 
                </div>
            </t>
            <t t-else="">
                <div t-field="doc.new_bkg_party" style="text-align: left" />
            </t>
        </t>
        <t t-set="ship_to_address">
            <t t-if="doc.bkg_party_id">
                <div style="text-align: left">
                    <t t-esc="doc.bkg_party_id.name" />, 
                    <t t-esc="doc.bkg_party_id.street" />, 
                    <t t-if="doc.bkg_party_id.street1">, <t t-esc="doc.bkg_party_id.street1" /></t>
                    <t t-esc="doc.bkg_party_id.city_id.name" />, 
                    <t t-esc="doc.bkg_party_id.state_id.name" />, 
                    <t t-esc="doc.bkg_party_id.country_id.name" />, 
                    <t t-esc="doc.bkg_party_id.pin_code" />
                </div>
            </t>
            <t t-else="">
                <div t-field="doc.new_bkg_party" style="text-align: left" />
            </t>
        </t>
        <t t-set="invoice_to_address">
            <t t-if="doc.bkg_party_id">
                <div style="text-align: left">
                    <t t-esc="doc.bkg_party_id.name" />, 
                    <t t-esc="doc.bkg_party_id.street" />, 
                    <t t-if="doc.bkg_party_id.street1">, <t t-esc="doc.bkg_party_id.street1" /></t>
                    <t t-esc="doc.bkg_party_id.city_id.name" />, 
                    <t t-esc="doc.bkg_party_id.state_id.name" />, 
                    <t t-esc="doc.bkg_party_id.country_id.name" />, 
                    <t t-esc="doc.bkg_party_id.pin_code" />
                </div>
            </t>
            <t t-else="">
                <div t-field="doc.new_bkg_party" style="text-align: left" />
            </t>
        </t>
        <t t-set="trans_data" t-value="doc"/>
            <div class="p-2">
            </div>
</t>
</template>


<template id="report_ct_quotations_raw">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="doc">
            <t t-call="ct_quotations.report_ct_quotations_document" t-lang="doc.service_id.company_id.partner_id.lang"/>
        </t>
    </t>
</template>

<template id="report_ct_quotations">
    <t t-call="ct_quotations.report_ct_quotations_raw"/>
</template>

</odoo>
