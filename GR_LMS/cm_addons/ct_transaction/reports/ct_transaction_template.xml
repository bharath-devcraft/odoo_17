<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_ct_transaction_document">
 <t t-call="web.external_layout">
   <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)" />
        <t t-set="consignor_address">
            <div t-field="doc.partner_id"
                t-options='{"widget": "contact", "fields": ["address"], "no_marker": False, "no_tag_br": True,"phone_icons": True}' style="text-align: left"/>
        </t>
        <t t-set="ship_to_address">
            <div t-field="doc.company_id.partner_id"
                t-options='{"widget": "contact", "fields": ["address"], "no_marker": False, "no_tag_br": True,"phone_icons": True}' style="text-align: left"/>
        </t>
        <t t-set="invoice_to_address">
            <div t-field="doc.company_id.partner_id"
                t-options='{"widget": "contact", "fields": ["address"], "no_marker": False, "no_tag_br": True,"phone_icons": True}' style="text-align: left"/>
        </t>
        <t t-set="trans_data" t-value="doc"/>
            <div class="p-2">
            </div>
</t>
</template>


<template id="report_ct_transaction_raw">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="doc">
            <t t-call="ct_transaction.report_ct_transaction_document" t-lang="doc.partner_id.lang"/>
        </t>
    </t>
</template>

<template id="report_ct_transaction">
    <t t-call="ct_transaction.report_ct_transaction_raw"/>
</template>

</odoo>
