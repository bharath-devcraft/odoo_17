<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="cr_report_form" model="ir.ui.view">
            <field name="name">Custom Report Template</field>
            <field name="model">cr.report</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Custom Report Template" create="0">
                    <group>
                        <group>
                            <field name="from_date" required="1"/>
                            <field name="partner_ids"  widget="many2many_tags"  options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="to_date" widget="custom_date" required="1"/>
                            <field name="format_type" required="1"/>
                            <button name="generate_action"
                                type="object"
                                string="Generate"
                                class="oe_highlight"/>
                        </group>
                    </group>

                    <notebook>

                        <page string="Entry Info">
                            <group>
                                <group>
                                    <field name="generate_user_id"/>
                                    <field name="company_id" invisible="1"/>
                                </group>
                                <group>
                                    <field name="generate_date"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>
    
        <record id="cr_report_win_action" model="ir.actions.act_window">
            <field name="name">Custom Report Template</field>
            <field name="res_model">cr.report</field>
            <field name="view_mode">form</field>
        </record>

        <menuitem name="Reports" web_icon="cr_report,static/description/icon.png"  id="cr_report_m_root" sequence="6"/>

        <menuitem name="Custom Report Template" id="cr_report_act_menu" parent="cr_report_m_root" action="cr_report_win_action" sequence="2"/>

    </data>
        
</odoo>
