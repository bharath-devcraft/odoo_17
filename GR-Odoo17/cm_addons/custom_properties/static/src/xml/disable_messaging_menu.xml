    <t t-name="disable_messaging_menu" t-inherit="mail.MessagingMenu" t-inherit-mode="extension">
        <xpath expr="//Dropdown" position="replace">
        </xpath>
        <xpath expr="//t[@t-else]" position="replace">
        </xpath>
    </t>

    <!-- Preference : notification alert content change -->
    <t t-name="custom_notification_alert" t-inherit="web.NotificationAlert" t-inherit-mode="extension">
        <xpath expr="//div[contains(@class, 'alert')]" position="replace">
            <div t-if="isNotificationBlocked" class="alert alert-primary text-center">
                LMS Push notifications have been blocked. Go to your browser settings to allow them.
            </div>
        </xpath>
    </t>

</templates>

