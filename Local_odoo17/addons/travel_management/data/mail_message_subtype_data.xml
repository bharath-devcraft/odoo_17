        <!-- Travel-related subtypes for messaging / Chatter -->
        <record id="tr_confirmed" model="mail.message.subtype">
            <field name="name">Travel Confirmed</field>
            <field name="res_model">travel_management.travel_management</field>
            <field name="default" eval="False"/>
            <field name="description">Travel Confirmed</field>
        </record>
        <record id="tr_validate" model="mail.message.subtype">
            <field name="name">Validated</field>
