        </record>
        <record id="tr_payment_received" model="mail.message.subtype">
            <field name="name">Payment Received</field>
            <field name="res_model">travel_management.travel_management</field>
            <field name="default" eval="False"/>
            <field name="description">Payment received from customer</field>
        </record>
        <record id="tr_payment_approved" model="mail.message.subtype">
            <field name="name">Travel Booked</field>
            <field name="res_model">travel_management.travel_management</field>
            <field name="default" eval="False"/>
            <field name="description">Travel booked successfully</field>
        </record>
        <record id="tr_payment_reject" model="mail.message.subtype">
            <field name="name">Rejected</field>
            <field name="res_model">travel_management.travel_management</field>
            <field name="default" eval="False"/>
            <field name="description">Travel has been rejected</field>
        </record>
        <record id="tr_payment_refund" model="mail.message.subtype">
            <field name="name">Refund</field>
            <field name="res_model">travel_management.travel_management</field>
            <field name="default" eval="False"/>
            <field name="description">Amount has been refunded</field>
        </record>
        <record id="tr_payment_wf_cancel" model="mail.message.subtype">
            <field name="name">WF Cancelled</field>
            <field name="res_model">travel_management.travel_management</field>
            <field name="default" eval="False"/>
            <field name="description">Initial stage travel has been cancelled</field>
        </record>
        <record id="tr_payment_cancel" model="mail.message.subtype">
            <field name="name">Cancelled</field>
            <field name="res_model">travel_management.travel_management</field>
            <field name="default" eval="False"/>
            <field name="description">Travel has been cancelled</field>
        </record>

