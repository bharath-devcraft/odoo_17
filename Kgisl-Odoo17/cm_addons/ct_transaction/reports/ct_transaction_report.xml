<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_report_ct_transaction" model="ir.actions.report">
            <field name="name">Transaction Details</field>
            <field name="model">ct.transaction</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">ct_transaction.report_ct_transaction</field>
            <field name="report_file">ct_transaction.report_ct_transaction</field>
            <field name="print_report_name">
                (object.status in ('approved') and 'Transaction PDF - %s' % (object.name) or
                'Transaction PDF')</field>
            <field name="binding_model_id" ref="model_ct_transaction"/>
            <field name="binding_type">report</field>
        </record>
    </data>
</odoo>
